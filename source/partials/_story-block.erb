<div class="block <%= block.data.classes %>">
  <% if block.data.block == 1 %>
  <h1 class="textbar title"><%= block.title %></h1>
  <% elsif %>
  <h2><%= block.title %></h2>
  <% end %>
  <div><%= block.body %></div>
  <div class="reference-container">
    <% if block.data.references %>
    <div class="reference-line"></div>
    <h3>Projects:</h3>
    <% for reference in block.data.references %>
    <% if reference.type == "page" %>
      <%= partial(:"partials/story-reference", :locals => { :reference => reference })  %>
    <% end %>
    <% end %>
    <h3>Publications:</h3>
    <% for reference in block.data.references %>
    <% if reference.type == "article" %>
      <%= partial(:"partials/story-reference", :locals => { :reference => reference })  %>
    <% end %>
    <% end %>
    <% end %>
  </div>
</div>