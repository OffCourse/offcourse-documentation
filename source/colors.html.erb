---
title: Offcourse - Typography
layout: main
---
<div class="layout--section header">
  <div class="grid">
    <div class="grid--section"></div>
    <div class="grid--section">
     <div class="container padding-tb-four">
        <ul class="container" data-container-type="column">
          <li class="container">
            <div class="logo" data-logo-size="large">Offcourse_</div>
          </li>
          <li class="container">
            <div class="logo" data-logo-size="large" data-logo-inverse="true">Documentation</div>
          </li>
          <li class="container">
            <div class="logo" data-logo-size="large" data-logo-inverse="true">Colors</div>
          </li>
        </ul>
      </div>
    </div>
  </div>
</div>

<div class="layout--section padding-b-two">
  <div class="grid">

    <div class="grid--section">
      <%= partial("partials/sheet-nav-style", :locals => { :active => current_page.data.active }) %>
    </div>

    <div class="grid--section">
      <div class="container padding-tb-one" data-container-type="fw">
        <div class="container padding-b-one">
          <h1 class="logo">Raw Colors</h1>
        </div>
        <%= partial("partials/sheet-colors", :locals => { :template => "night",               :text => false }) %>
        <%= partial("partials/sheet-colors", :locals => { :template => "dark",                :text => false }) %>
        <%= partial("partials/sheet-colors", :locals => { :template => "medium",              :text => false }) %>
        <%= partial("partials/sheet-colors", :locals => { :template => "light",               :text => false }) %>
        <%= partial("partials/sheet-colors", :locals => { :template => "very-light",          :text => false }) %>
        <%= partial("partials/sheet-colors", :locals => { :template => "day",                 :text => false }) %>
        <%= partial("partials/sheet-colors", :locals => { :template => "primary",             :text => false }) %>
        <div class="container padding-b-one">
          <h1 class="logo">Templates</h1>
        </div>
        <%= partial("partials/sheet-colors", :locals => { :template => "highlighted",         :text => true }) %>
        <%= partial("partials/sheet-colors", :locals => { :template => "selected",            :text => true }) %>
        <%= partial("partials/sheet-colors", :locals => { :template => "negative",            :text => true }) %>
        <%= partial("partials/sheet-colors", :locals => { :template => "paper",               :text => true }) %>
        <%= partial("partials/sheet-colors", :locals => { :template => "recycled-paper",      :text => true }) %>
        <%= partial("partials/sheet-colors", :locals => { :template => "smudged-paper",       :text => true }) %>
      </div>
    </div>
  </div>
</div>

<div class="layout--section footer padding-tb-two">
  <div class="grid">
    <div class="grid--section">
    </div>
    <div class="grid--section">
      <p class="title padding-b-third">Follow us on:</p>
      <div class="container">
        <a data-button-type="sheet" class="button" href="https://github.com/OffCourse/offcourse-frontend">Github</a>   
        <a data-button-type="sheet" class="button" href="https://twitter.com/offcourse_">Twitter</a>   
        <a data-button-type="sheet" class="button" href="https://www.linkedin.com/company/7962249">LinkedIn</a>   
      </div>
    </div>
  </div