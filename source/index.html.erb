---
title: Offcourse
layout: main
---
<div class="layout--section">
  <div class="header--container">
    <div class="header">
      <div class="header--section">
      </div>
      <div class="header--section">
        <ul class="header--list">
          <li class="header--textbar">Offcourse_</li>
          <li class="header--textbar header--textbar-inverse">Organize your</li>
          <li class="header--sublist">
            <div class="header--textbar header--textbar-inverse">Learning</div>
            <div class="header--textbar-small">Offcourse.io</div>
          </li>
        </ul>
      </div>
    </div>
  </div>
</div>

<div class="layout--section">
  <div class="main">
    <div class="main--section">
      <div class="dashboard">
        <div class="dashboard--main">
          <%= partial("partials/card-nav", :locals => { :active => current_page.data.active }) %>
        </div>
      </div>
    </div>
    <div class="main--section">
      <div class="sheets">
        <div class="container">
          <div class="sheet">
            <article class="content content-emphasis">
              <%= blog('frontpage').articles[0].body %>
            </article>
          </div>
        </div>
      </div>
      <div class="cards">
        <% for concept in blog('frontpage').articles[1].data.concepts %>
        <%= partial("partials/card-concept", :locals => { :concept => concept }) %>
        <% end %>
      </div>
      <div class="sheets">
        <div class="container">
          <div class="sheet">
            <article class="content">
              <img class="example--image" src="./images/iteration-current.png" />
            </article>
          </div>
        </div>
        <div class="container">
          <div class="sheet">
            <article class="content">
              <%= partial("partials/signup-mailchimp") %>
            </article>
          </div>
        </div>
      </div>
      <div class="cards">
        <% blog('team').articles.reverse_each do |person| %>
        <%= partial("partials/card-person", :locals => { :person => person }) %>
        <% end %>
      </div>
    </div>
  </div>
</div>

<div class="layout--section" style="background: black;">
  <div class="main" style="background: black; color: white; height: 400px;">
  </div>
</div>