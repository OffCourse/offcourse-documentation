---
title: Offcourse
layout: main
---

<img id="<%= blog('blocks').articles[0].data.anchor %>"class="image--fullwidth brand-tertiary" src="./images/item-body-2.svg" alt="">

<div class="layout__item layout__item--margin-bottom brand-tertiary">
  <article class="textbox">
    <h1 class="textbar textbar--big textbar--margin-bottom">Offcourse_</h1>
    <%= blog('blocks').articles[0].body %>
  </article>
</div>

<div id="<%= blog('blocks').articles[1].data.anchor %>" class="layout__item layout__item--padding-bottom">
  <header class="layout__item-top">
    <%= partial("partials/navigation", :locals => { :which_is_link_active => 1 }) %>
  </header>
  <div class="textbox">
    <h1 class="textbar"><%= blog('blocks').articles[1].data.title %></h1>
    <% for entity in blog('blocks').articles[1].data.concepts %>
    <div class="feature">
      <div class="feature__meta feature__meta--fw">
        <h3 class="feature__title"><%= entity.concept %></h3>
        <p class="feature__job"><%= entity.summery %></p>
        <p class="feature__name"><%= entity.feature %></p>
      </div>
    </div> 
    <% end %>
  </div>
</div>

<img id="<%= blog('blocks').articles[2].data.anchor %>"class="image--fullwidth image--padding brand-tertiary" src="./images/item-body-4.svg" alt="">

<div class="layout__item layout__item--padding-bottom">
  <header class="layout__item-top">
    <%= partial("partials/navigation", :locals => { :which_is_link_active => 2 }) %>
  </header>
  <article class="textbox">
    <h1 class="textbar"><%= blog('blocks').articles[2].data.title %></h1>
    <%= blog('blocks').articles[2].body %>
  </article>
</div>

<img id="<%= blog('blocks').articles[3].data.anchor %>" class="image--fullwidth image--padding-center brand-tertiary" src="./images/item-partners.svg" alt="">

<div class="layout__item layout__item--padding-bottom">
  <header class="layout__item-top">
    <%= partial("partials/navigation", :locals => { :which_is_link_active => 3 }) %>
  </header>
  <article class="layout__item-grid-content">
    <div class="textbox">
      <h1 class="textbar"><%= blog('blocks').articles[3].data.title %></h1>
      <%= blog('blocks').articles[3].body %>
    </div>
  </article>
  <div class="layout__item-partners">
    <% for entity in blog('blocks').articles[3].data.partners %>
    <div class="partner">
        <img class="partner__image" src="./images/people/<%= entity.img %>" alt="">
        <div class="partner__meta">
          <a class="partner__a" href="<%= entity.url || 'https://www.linkedin.com/vsearch/f?type=all&keywords=' + entity.name %>">
            <h3 class="partner__name"><%= entity.name %></h3>
          </a>
          <p class="partner__job"><%= entity.job %></p>
        </div>
    </div>
    <% end %>
  </div>
</div>

<div id="<%= blog('blocks').articles[4].data.anchor %>" class="layout__item layout__item--padding-bottom">
  <header class="layout__item-top">
    <%= partial("partials/navigation", :locals => { :which_is_link_active => 4 }) %>
  </header>
  <article class="layout__item-grid-content">
    <div class="textbox">
      <h1 class="textbar"><%= blog('blocks').articles[4].data.title %></h1>
      <%= blog('blocks').articles[4].body %>
    </div>
  </article>
  <div class="textbox">
    <%= partial("partials/initiatives") %>
  </div>
</div>