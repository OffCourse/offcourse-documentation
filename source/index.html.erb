---
title: The Story of Coding the Humanities
---

<main class="story">

  <div class="item item-header">
    <div class="block block-red visualisation">
    </div>
    <div class="<%= blog('blocks').articles[0].data.classes %>">
      <div><%= blog('blocks').articles[0].body %></div>
    </div>
  </div>

  <% for item in 2..2 %>
  <div class="item item-body"> 
    <div class="column-left">
    <% blog('blocks').articles.each do |block| %>
    <% if block.data.item == item and block.data.block != 4 %>
      <%= partial(:"partials/block", :locals => { :block => block })  %>
    <% elsif block.data.item == item and block.data.block == 4 %>
    </div>
    <div class="column-right">
      <%= partial(:"partials/block", :locals => { :block => block })  %>
    <% end %>
    <% end %>
    </div>
  </div>
  <% end %>

</main>
