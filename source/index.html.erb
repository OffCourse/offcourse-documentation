---
title: Coding the Humanities
layout: main
---
<div id="anchor-header" class="layout__item brand-secundary">
  <header class="layout__item-top  brand-secundary">
    <%= partial("partials/navigation", :locals => { :which_is_link_active => 1 }) %>
  </header>
  <article class="layout__item-grid-content">
    <div class="textbox">
      <h1 class="textbar textbar--big">Offcourse</h1><br>
      <%= blog('blocks').articles[0].body %>
    </div>
  </article>
  <aside class="layout__item-offgrid-content layout__item-offgrid-content--no-padding">
    <div class="hammer">
      <img onclick="" class="hammer__image hammer__image--header " src="./images/hammer-short.svg" alt="">
    </div>
  </aside>
</div>

<div id="anchor-partners" class="layout__item">
  <article class="layout__item-grid-content">
    <h1 class="textbar textbar--fullwidth-smallest"><%= blog('blocks').articles[4].data.title %></h1>
    <div class="textbox"><%= blog('blocks').articles[4].body %></div>
  </article>
  <div class="layout__item-partners">
    <% for entity in blog('blocks').articles[4].data.partners %>
    <div class="partner brand-secundary">
      <a href="<%= entity.url || 'https://www.linkedin.com/vsearch/f?type=all&keywords=' + entity.name %>">
        <h3 class="partner__name"><%= entity.name %></h3>
        <p class="partner__job"><%= entity.job %></p>
      </a>
    </div> 
    <% end %>
  </div>
</div>

<div id="anchor-about"class="layout__item brand-secundary">
  <header class="layout__item-top brand-secundary">
    <%= partial("partials/navigation", :locals => { :which_is_link_active => 6 }) %>
  </header>
  <article class="layout__item-grid-content">
    <div class="textbox">
      <h1 class="textbar"><%= blog('blocks').articles[5].data.title %></h1>
      <%= blog('blocks').articles[5].body %>
    </div>
  </article>
  <aside class="layout__item-offgrid-content layout__item-offgrid-content--no-padding">
    <div class="hammer">
      <img class="hammer__image hammer__image--about" src="./images/hammer-short.svg" alt="">
    </div>
  </aside> 
</div>