---
title: Offcourse
layout: main
---
<div class="layout--section header">
  <div class="main">
    <div class="main--section">
    </div>
    <div class="main--section header--container">
      <ul class="header--list">
        <li class="header--textbar">Offcourse_</li>
        <li class="header--textbar header--textbar-inverse">Organize Your</li>
        <li class="header--sublist">
          <div class="header--textbar header--textbar-inverse">Learning</div>
          <div class="header--textbar-small">Offcourse.io</div>
        </li>
      </ul>
    </div>
  </div>
</div>

<div class="layout--section">
  <div class="main">
    <div class="main--section">
      <div class="dashboard">
        <div class="dashboard--main">
          <%= partial("partials/card-nav", :locals => { :active => current_page.data.active }) %>
        </div>
      </div>
    </div>
    <div class="main--section">
      <div class="sheets">
        <div class="container">
          <div class="sheet">
            <article class="content">
              <%= blog('frontpage').articles[0].body %>
            </article>
          </div>
        </div>
      </div>
      <div class="sheets">
        <div class="container">
          <div class="sheet">
            <%= partial("partials/signup-mailchimp") %>
          </div>
        </div>
      </div>
      <div class="container-without">
        <div class="main--header" id="features">Features</div>
      </div>
      <div class="cards">
        <% for concept in blog('frontpage').articles[1].data.concepts %>
        <%= partial("partials/card-concept", :locals => { :concept => concept }) %>
        <% end %>
      </div>
      <div class="container-without">
        <div class="main--header" id="preview">Preview</div>
      </div>
      <div class="sheets">
        <div class="container">
          <div class="sheet">
            <article class="content">
              <img class="example--image" src="./images/iteration-current.png" />
            </article>
          </div>
        </div>
      </div>
      <div class="container-without">
        <div class="main--header" id="mission">Mission</div>
      </div>
      <div class="sheets">
        <div class="container">
          <div class="sheet">
            <article class="content">
              <%= blog('frontpage').articles[3].body %>
            </article>
          </div>
        </div>
      </div>
      <div class="container-without">
        <div class="main--header" id="team">Team</div>
      </div>
      <div class="cards-person">
        <% blog('team').articles.reverse_each do |person| %>
        <%= partial("partials/card-person", :locals => { :person => person }) %>
        <% end %>
      </div>
      <div class="container-without">
        <div class="main--header" id="signup">Signup</div>
      </div>
      <div class="sheets">
        <div class="container">
          <div class="sheet">
            <%= partial("partials/signup-mailchimp") %>
          </div>
        </div>
      </div>
    </div>
  </div>
</div>

<div class="layout--section footer">
  <div class="main">
    <div class="main--section">
    </div>
    <div class="main--section footer--container">
      <a class="github-button" href="https://github.com/OffCourse/offcourse-frontend" data-style="mega" aria-label="Star OffCourse/offcourse-frontend on GitHub">Star</a>
      <script async defer src="https://buttons.github.io/buttons.js"></script>
      <script src="//platform.linkedin.com/in.js" type="text/javascript"> lang: en_US</script>
      <script type="IN/FollowCompany" data-id="7962249"></script>
      <a href="https://twitter.com/offcourse_" class="twitter-follow-button" data-show-count="false" data-size="large" data-dnt="true">Follow @offcourse</a>
      <script>!function(d,s,id){var js,fjs=d.getElementsByTagName(s)[0],p=/^http:/.test(d.location)?'http':'https';if(!d.getElementById(id)){js=d.createElement(s);js.id=id;js.src=p+'://platform.twitter.com/widgets.js';fjs.parentNode.insertBefore(js,fjs);}}(document, 'script', 'twitter-wjs');</script>
<!--       <img class="footer--icon" src="./images/github.png" />
      <img class="footer--icon" src="./images/linkedin.jpg" />
      <img class="footer--icon" src="./images/twitter.png" /> -->
    </div>
  </div>
</div>