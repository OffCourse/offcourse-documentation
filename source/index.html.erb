---
title: Offcourse
layout: main
---
<div class="layout--section header">
  <div class="grid">
    <div class="grid--section"></div>
    <div class="grid--section">
     <div class="container padding-tb-four">
        <ul class="container" data-container-type="column">
          <li class="container">
            <div class="logo" data-logo-size="large">Offcourse_</div>
          </li>
          <li class="container">
            <div class="logo" data-logo-size="large" data-logo-inverse="true">Organize Your</div>
          </li>
          <li class="container">
            <div class="logo" data-logo-size="large" data-logo-inverse="true">Learning</div>
            <div class="container" data-container-type="column">
              <div class="logo">Offcourse.io</div>
            </div>
          </li>
        </ul>
      </div>
    </div>
  </div>
</div>

<div class="layout--section padding-b-two">
  <div class="grid">

    <div class="grid--section">
      <%= partial("partials/card-nav", :locals => { :active => current_page.data.active }) %>
    </div>

    <div class="grid--section">
      <div class="container padding-tb-one" data-container-type="fw">
        <div class="card">
          <article class="content">
            <%= blog('frontpage').articles[0].body %>
          </article>
        </div>
      </div>
      <div class="container padding-tb-one" data-container-type="fw">
        <div class="card">
          <%= partial("partials/signup-mailchimp") %>
        </div>
      </div>
      <div class="container padding-t-two">
        <div class="logo" data-logo-padded="true" id="features">Features</div>
      </div>
      <div class="subgrid padding-tb-one" data-subgrid-columns="3">
        <% for concept in blog('frontpage').articles[1].data.concepts %>
        <%= partial("partials/card-concept", :locals => { :concept => concept }) %>
        <% end %>
      </div>
      <div class="container padding-t-two">
        <div class="logo" data-logo-padded="true" id="preview">Preview</div>
      </div>
      <div class="container padding-tb-one" data-container-type="fw">
        <div class="card">
          <article class="content">
            <img class="image" data-image-filter="true" data-image-filter-recolor="true" src="./images/iteration-current.png" />
          </article>
        </div>
      </div>
      <div class="container padding-t-two">
        <div class="logo" data-logo-padded="true" id="mission">Mission</div>
      </div>
      <div class="container padding-tb-one" data-container-type="fw">
        <div class="card">
          <article class="content">
            <%= blog('frontpage').articles[3].body %>
          </article>
        </div>
      </div>
      <div class="container padding-t-two">
        <div class="logo" data-logo-padded="true" id="team">Team</div>
      </div>
      <div class="subgrid padding-tb-one" data-subgrid-columns="2">
        <% blog('team').articles.reverse_each do |person| %>
        <%= partial("partials/card-person", :locals => { :person => person }) %>
        <% end %>
      </div>
      <div class="container padding-t-two">
        <div class="logo" data-logo-padded="true" id="signup">Signup</div>
      </div>
      <div class="container padding-tb-one" data-container-type="fw">
        <div id="join" class="card">
          <%= partial("partials/signup-mailchimp") %>
        </div>
      </div>
    </div>

  </div>
</div>

<div class="layout--section footer padding-tb-two">
  <div class="grid">
    <div class="grid--section">
    </div>
    <div class="grid--section">
      <p class="title padding-b-third">Follow us on:</p>
      <div class="container">
        <a data-button-type="card" class="button" href="https://github.com/OffCourse/offcourse-frontend">Github</a>   
        <a data-button-type="card" class="button" href="https://twitter.com/offcourse_">Twitter</a>   
        <a data-button-type="card" class="button" href="https://www.linkedin.com/company/7962249">LinkedIn</a>   
      </div>
    </div>
  </div>
</div>