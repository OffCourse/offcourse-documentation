---
title: The Story of Coding the Humanities
layout: story
---

<div class="item item-header">
  <div class="block block-red visualisation">
  </div>
  <div class="<%= blog('blocks').articles[0].data.classes %>">
    <div><%= blog('blocks').articles[0].body %></div>
  </div>
</div>

<% for item in 2..4 %>
<div class="item item-body">
  <div class="column-left">
  <% blog('blocks').articles.each do |block| %>
  <% if block.data.item == item and block.data.block != 4 %>
    <%= partial(:"partials/story-block", :locals => { :block => block })  %>
  <% elsif block.data.item == item and block.data.block == 4 %>
    </div>
    <div class="column-right">
      <%= partial(:"partials/story-block", :locals => { :block => block })  %>
  <% end %>
  <% end %>
  </div>
</div>
<% end %>

<div class="item item-people">
  <div class="<%= blog('blocks').articles[13].data.classes %>">
    <div><%= blog('blocks').articles[13].body %></div>
  </div>
  <div class="block entities">
    <% for entity in blog('blocks').articles[13].data.entities %>
      <%= partial(:"partials/story-entity", :locals => { :entity => entity })  %>
    <% end %>
  </div>
</div>

<div class="item item-about">
  <div class="<%= blog('blocks').articles[14].data.classes %>">
    <div><%= blog('blocks').articles[14].body %></div>
  </div>
</div>
