<div id="<%= blog('blocks').articles[3].data.anchor %>" class="layout__item">
  <header class="layout__item-top">
    <%= partial("partials/navigation", :locals => { :which_is_link_active => 3 }) %>
  </header>
  <article class="layout__item-grid-content">
    <div class="textbox">
      <h1 class="textbar"><%= blog('blocks').articles[3].data.title %></h1>
      <%= blog('blocks').articles[3].body %>
    </div>
  </article>
  <div class="layout__item-partners">
    <% for entity in blog('blocks').articles[3].data.partners %>
    <div class="partner brand-secundary">
      <a href="<%= entity.url || 'https://www.linkedin.com/vsearch/f?type=all&keywords=' + entity.name %>">
        <h3 class="partner__name"><%= entity.name %></h3>
        <p class="partner__job"><%= entity.job %></p>
      </a>
    </div> 
    <% end %>
  </div>
</div>

<div id="<%= blog('blocks').articles[4].data.anchor %>" class="layout__item brand-secundary">
  <header class="layout__item-top brand-secundary">
    <%= partial("partials/navigation", :locals => { :which_is_link_active => 4 }) %>
  </header>
  <article class="layout__item-grid-content">
    <div class="textbox">
      <h1 class="textbar"><%= blog('blocks').articles[4].data.title %></h1>
      <%= blog('blocks').articles[4].body %>
    </div>
  </article>
  <aside class="layout__item-offgrid-content">
    <h3 class="references-title">Projects:</h3>
    <% blog('projects').articles.each do |post| %>
    <%= partial(:"partials/reference", :locals => { :reference => post })  %>
    <% end %>
    <h3 class="references-title">Publications:</h3>
    <% blog('publications').articles.each do |post| %>
    <%= partial(:"partials/reference", :locals => { :reference => post })  %>
    <% end %>
  </aside>

</div>