---
title: Offcourse
layout: main
---
<div id="<%= blog('blocks').articles[0].data.anchor %>" class="layout__item brand-secundary">
  <header class="layout__item-top  brand-secundary">
    <%= partial("partials/navigation", :locals => { :which_is_link_active => 0 }) %>
  </header>
  <article class="layout__item-grid-content">
    <div class="textbox">
      <h1 class="textbar textbar--big textbar--margin-bottom">Offcourse_</h1><br>
      <%= blog('blocks').articles[0].body %>
    </div>
  </article>
  <aside class="layout__item-offgrid-content layout__item-offgrid-content--no-padding">
    <div class="hammer">
      <img onclick="" class="hammer__image hammer__image--header " src="./images/hammer-short.svg" alt="">
    </div>
  </aside>
</div>

<div id="<%= blog('blocks').articles[1].data.anchor %>" class="layout__item">
  <header class="layout__item-top">
    <%= partial("partials/navigation", :locals => { :which_is_link_active => 1 }) %>
  </header>
  <article class="layout__item-grid-content">
    <div class="textbox">
      <h1 class="textbar"><%= blog('blocks').articles[1].data.title %></h1>
      <%= blog('blocks').articles[1].body %>
    </div>
  </article>
  <div class="layout__item-partners">
  <% for entity in blog('blocks').articles[1].data.concepts %>
    <div class="partner brand-secundary">
      <h3 class="partner__name"><%= entity.concept %></h3>
      <p class="partner__job"><%= entity.summery %></p>
      <p class="partner__name"><%= entity.feature %></p>
    </div> 
  <% end %>
  </div>
</div>

<div id="<%= blog('blocks').articles[2].data.anchor %>" class="layout__item brand-secundary">
  <header class="layout__item-top">
    <%= partial("partials/navigation", :locals => { :which_is_link_active => 2 }) %>
  </header>
  <article class="layout__item-grid-content">
    <div class="textbox">
      <h1 class="textbar"><%= blog('blocks').articles[2].data.title %></h1>
      <%= blog('blocks').articles[2].body %>
    </div>
  </article>
