<div id="item-header" class="item item-header">
  <div class="column-left">
    <div class="<%= blog('blocks').articles[0].data.classes %>">
      <h1 class="logo main-logo title textbar textbar-big">Coding</h1>
      <br>
      <h1 class="logo main-logo title textbar textbar-big">The</h1>
      <br>
      <h1 class="logo main-logo title textbar textbar-big">Humanities</h1>
      <div><%= blog('blocks').articles[0].body %></div>
    </div>
  </div>
  <div class="column-right">
    <img class="cog1" src="images/cog1.svg" alt="">
  </div>
</div>

<% for item in 2..4 %>
<a id="item-body-<%= item %>"></a>
<%= partial("partials/navigation", :locals => { :which_is_link_active => item }) %>
<div class="item item-body item-num-<%= item %>">
  <div class="column-left">
  <% blog('blocks').articles.each do |block| %>
  <% if block.data.item == item and block.data.block != 4 %>
    <%= partial(:"partials/story-block", :locals => { :block => block })  %>
  <% elsif block.data.item == item and block.data.block == 4 %>
    </div>
    <div class="column-right">
      <%= partial(:"partials/story-block", :locals => { :block => block })  %>
  <% end %>
  <% end %>
  </div>
</div>
<% end %>

<a id="item-partners"></a>
