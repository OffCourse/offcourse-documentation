---
title: Offcourse
layout: main
---
<div class="container padding-t-two-b-one" data-container-type="fw">
  <div class="sheet js--anchor">
    <div class="markdown">
      <%= blog('marketing').articles[0].body %>
    </div>
  </div>
</div>


<div class="container padding-tb-one" data-container-type="fw">
  <div class="sheet js--anchor">
    <%= partial("partials/signup-mailchimp") %>
  </div>
</div>

<div class="container padding-t-two">
  <div class="logo" data-logo-padded="true" id="features">Features</div>
</div>

<div class="subgrid padding-tb-one" data-subgrid-columns="3">
  <% for concept in blog('marketing').articles[1].data.concepts %>
  <%= partial("partials/sheet-concept", :locals => { :concept => concept }) %>
  <% end %>
</div>

<div class="container padding-t-two">
  <div class="logo" data-logo-padded="true" id="preview">Preview</div>
</div>

<div class="container padding-tb-one" data-container-type="fw">
  <div class="sheet js--anchor">
    <div class="markdown">
      <a href="http://platform.offcourse.io">
        <img class="image" data-image-filter="true" data-image-filter-recolor="true" src="./images/iteration-current.png" />
      </a>
    </div>
  </div>
</div>

<div class="container padding-t-two">
  <div class="logo" data-logo-padded="true" id="mission">Mission</div>
</div>

<div class="container padding-tb-one" data-container-type="fw">
  <div class="sheet js--anchor">
    <div class="markdown">
      <%= blog('marketing').articles[3].body %>
    </div>
  </div>
</div>

<div class="container padding-t-two">
  <div class="logo" data-logo-padded="true" id="team">Team</div>
</div>

<div class="subgrid padding-tb-one" data-subgrid-columns="2">
  <% blog('team').articles.reverse_each do |person| %>
  <%= partial("partials/business-card", :locals => { :person => person }) %>
  <% end %>
</div>

<div class="container padding-t-two">
  <div class="logo" data-logo-padded="true" id="signup">Signup</div>
</div>

<div class="container padding-tb-one" data-container-type="fw">
  <div id="join" class="sheet js--anchor">
    <%= partial("partials/signup-mailchimp") %>
  </div>
</div>
