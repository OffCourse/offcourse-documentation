---
layout: docs
---
<% sortedArticles = blog('documentation').articles.sort {|x, y| x.data.order <=> y.data.order} %>
<% for article in sortedArticles %>
  <% if article.data.page == page %>
    <% if "sheet" == article.data.partial %>
      <%= partial("partials/sheet-with-title", :locals => { :title => article.title, :markdown => article.body }) %>
    <% end %>
    <% if "erb" == article.data.partial %>
      <%= article.body %>
    <% end %>
  <% end %>
<% end %>
