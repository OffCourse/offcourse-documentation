<%= partial "partials/head" %>
<div id="container">
  <div class="layout">
    <div class="layout--section header">
      <div class="grid">
        <div class="grid--section"></div>
        <div class="grid--section">
         <div class="container padding-tb-four">
            <ul class="container" data-container-type="column">
              <li class="container">
                <div class="logo" data-logo-size="large">Offcourse_</div>
              </li>
              <li class="container">
                <div class="logo" data-logo-size="large" data-logo-inverse="true">Organize Your</div>
              </li>
              <li class="container">
                <div class="logo" data-logo-size="large" data-logo-inverse="true">Learning</div>
                <div class="container" data-container-type="column">
                  <div class="logo">Offcourse.io</div>
                </div>
              </li>
            </ul>
          </div>
        </div>
      </div>
    </div>
    <div class="layout--section main padding-b-two">
      <div class="grid">

        <div class="grid--section">
          <%= partial("partials/nav", :locals => { :active => current_page.data.active }) %>
        </div>

        <div class="grid--section">
          <%= yield %>
        </div>
      </div>
    </div>
    <div class="layout--section footer padding-tb-two">
      <div class="grid">
        <div class="grid--section">
        </div>
        <div class="grid--section">
          <p class="t--title padding-b-third">Follow us on:</p>
          <div class="container">
            <a data-button-type="sheet" class="button" href="https://github.com/OffCourse/offcourse-frontend">Github</a>   
            <a data-button-type="sheet" class="button" href="https://twitter.com/offcourse_">Twitter</a>   
            <a data-button-type="sheet" class="button" href="https://www.linkedin.com/company/7962249">LinkedIn</a>   
          </div>
        </div>
      </div>
    </div>
  </div>
</div>
<%= partial "partials/footer" %>
