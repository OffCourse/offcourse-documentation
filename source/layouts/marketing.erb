<%= partial "partials/head" %>
<div id="container">
  <div class="layout">
    <div class="layout--section header">
      <div class="grid">
        <div class="grid--section"></div>
        <div class="grid--section">
         <div class="container padding-tb-four">
            <ul class="container" data-container-type="column">
              <li class="container">
                <div class="logo" data-logo-size="large"><a href="/">Offcourse_</a></div>
              </li>
              <li class="container">
                <div class="logo" data-logo-size="large" data-logo-inverse="true">Learning Made</div>
              </li>
              <li class="container">
                <div class="logo" data-logo-size="large" data-logo-inverse="true">Simple</div>
                <div class="container" data-container-type="column">
                  <div class="logo">Offcourse.io</div>
                </div>
              </li>
            </ul>
          </div>
        </div>
      </div>
    </div>
    <div class="layout--section padding-b-two">
      <div class="grid">

        <div class="grid--section">
          <%= partial("partials/nav-marketing") %>
        </div>

        <div class="grid--section">
          <div class="container padding-tb-one" data-container-type="fw">
            <%= yield %>
          </div>
        </div>

      </div>
    </div>
    <div class="layout--section footer padding-tb-two">
      <div class="grid">
        <div class="grid--section">
        </div>
        <div class="grid--section">
          <p class="t--text padding-b-third">We strive to bring free and community-driven education to learners around the world, until each and every person is able to take control over their own professional growth.</p>
          <p class="t--title padding-b-third">Get in touch</p>
          <div class="container">
            <a data-button-type="sheet" class="button" href="https://github.com/OffCourse/offcourse-frontend">Github</a>
            <a data-button-type="sheet" class="button" href="https://twitter.com/offcourse_">Twitter</a>
            <a data-button-type="sheet" class="button" href="https://www.linkedin.com/company/7962249">LinkedIn</a>
          </div>
        </div>
      </div>
    </div>
  </div>
</div>
<%= partial "partials/footer" %>
