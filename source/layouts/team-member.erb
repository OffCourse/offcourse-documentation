<%= partial "partials/head" %>
<img class="image--fullwidth image--padding-center brand-tertiary" src="../images/fw-people.svg" alt="">

<article class="layout__item">
  <%= partial("partials/navigation", :locals => { :which_is_link_active => 3 }) %>
  <div class="textbox">
    <h1 class="textbar textbar--margin-bottom">
      Team Member
    </h1>
  
    <%= partial("partials/team-member", :locals => { :person => current_page, :extra_info => 2 }) %>

    <% if current_page.data.summery %>
    <h2>Summery:</h2> 
    <p><%= current_page.data.summery %></p>
    <% end %>
    
    <h2>Story:</h2>
    <%= yield %>
  </div>

  <footer class="post__footer">
    <div class="textbox">
      <%= partial("partials/publications", :locals => { :search_query => current_page.data.name }) %>
    </div>
    <%= partial("partials/navigation", :locals => { :which_is_link_active => 3 }) %>
  </footer>

</article>



<%= partial "partials/footer" %>
