---
title: Offcourse - Typography
layout: main
---
<div class="layout--section header">
  <div class="grid">
    <div class="grid--section"></div>
    <div class="grid--section">
     <div class="container padding-tb-four">
        <ul class="container" data-container-type="column">
          <li class="container">
            <div class="logo" data-logo-size="large">Offcourse_</div>
          </li>
          <li class="container">
            <div class="logo" data-logo-size="large" data-logo-inverse="true">Documentation</div>
          </li>
          <li class="container">
            <div class="logo" data-logo-size="large" data-logo-inverse="true">Typography</div>
          </li>
        </ul>
      </div>
    </div>
  </div>
</div>

<div class="layout--section padding-b-two">
  <div class="grid">

    <div class="grid--section">
      <%= partial("partials/sheet-nav-style", :locals => { :active => current_page.data.active }) %>
    </div>

    <div class="grid--section">
      <div class="container padding-tb-one" data-container-type="fw">
        <div class="container padding-b-one">
          <h1 class="logo">Typefaces</h1>
        </div>
        <%= partial("partials/sheet-styleguide", :locals => { :template => "nitty-normal", :long => true }) %>
        <%= partial("partials/sheet-styleguide", :locals => { :template => "nitty-grotesk", :long => true }) %>
        <%= partial("partials/sheet-styleguide", :locals => { :template => "nitty-bold", :long => true }) %>
        <%= partial("partials/sheet-styleguide", :locals => { :template => "nitty-grotesk-bold", :long => true }) %>
        <div class="container padding-b-one">
          <h1 class="logo">Templates</h1>
        </div>
        <%= partial("partials/sheet-styleguide", :locals => { :template => "banner", :long => false }) %>
        <%= partial("partials/sheet-styleguide", :locals => { :template => "logo", :long => false }) %>
        <%= partial("partials/sheet-styleguide", :locals => { :template => "title", :long => false }) %>
        <%= partial("partials/sheet-styleguide", :locals => { :template => "form", :long => true}) %>
        <%= partial("partials/sheet-styleguide", :locals => { :template => "list", :long => true }) %>
        <%= partial("partials/sheet-styleguide", :locals => { :template => "subtitle", :long => false }) %>
        <%= partial("partials/sheet-styleguide", :locals => { :template => "text", :long => true }) %>
        <%= partial("partials/sheet-styleguide", :locals => { :template => "label", :long => true }) %>
      </div>
    </div>

  </div>
</div>

<div class="layout--section footer padding-tb-two">
  <div class="grid">
    <div class="grid--section">
    </div>
    <div class="grid--section">
      <p class="title padding-b-third">Follow us on:</p>
      <div class="container">
        <a data-button-type="sheet" class="button" href="https://github.com/OffCourse/offcourse-frontend">Github</a>   
        <a data-button-type="sheet" class="button" href="https://twitter.com/offcourse_">Twitter</a>   
        <a data-button-type="sheet" class="button" href="https://www.linkedin.com/company/7962249">LinkedIn</a>   
      </div>
    </div>
  </div